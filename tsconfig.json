{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "types": ["node", "@testing-library/jest-dom"],
    "paths": {
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@context": ["context"],
      "@context/*": ["context/*"],
      "@helpers": ["helpers"],
      "@helpers/*": ["helpers/*"]
    }
  },
  "include": ["src"]
}
